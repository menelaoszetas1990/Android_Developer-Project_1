<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style of the image -->
    <style name="image">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Style of the title text -->
    <style name="title">
        <item name="android:padding">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Style of the sub-title text -->
    <style name="subtitle">
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/subtitle</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style of the info's linear layout view group -->
    <style name="infoViewGroup">
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Style of the info name -->
    <style name="informationName">
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/infoName</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style of the info text -->
    <style name="informationText">
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">end</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/infoText</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
